{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@/*": ["src/*"],
      "@bentwnghk/ui": ["src"],
      "@bentwnghk/ui/*": ["src/*"],
      "@bentwnghk/ui/mdx": ["src/mdx"],
      "@bentwnghk/ui/mdx/*": ["src/mdx/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["vitest/globals"]
  },
  "exclude": ["mdx.d.ts"],
  "include": ["src", "docs", "tests", ".dumirc.ts", ".fatherrc.ts"]
}
